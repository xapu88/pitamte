<li id="question-<%= question.id %>">
	<div class='row question'>
		<hr />
		<div class='col-sm-10 question-created-at'>
  		<span><%= question.created_at.strftime("%d.%m.%Y. %H:%M") %>
  		<span>[<%= question.category.title %>]</span>
  	</div>
    <% if user_signed_in? && question.owner?(current_user) %>
      <div class='col-sm-2 question-actions'>
        <%= link_to edit_question_path(question) do %>
          <i class='fa fa-edit'></i>
        <% end %>
        <%= link_to question, remote: true, method: :delete, data: { confirm: 'Da li ste sigurni? Pitanje Ä‡e biti trajno obrisano.' } do %>
          <button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <% end %>
      </div>
    <% end %>
  	<div class='col-sm-12 question-title'>
  		<span><%= question.title %></span>
  	</div>
  	<div class='col-sm-12 question-content'>
  		<span><%= truncate(question.content, length: 100) %></span>
  	</div>
    <div class='col-sm-2 question-share'>
      <div class="fb-share-button" data-href="https://pitamte.herokuapp.com/questions/<%=question.id%>" data-layout="button"></div>
      </div>
    <div class='col-sm-4 question-author'>
      <span>
      <% if question.signature.nil? %>
        anonimno
      <% elsif !question.signature.nil? %>
        <%= question.signature %>
      <% end %>
      </span>
    </div>
    <div class='col-sm-6 question-answers'>
      <span>Odgovora: <%= question.answers.count %></span>
      <%= link_to question do %>
        <% if question.answers.count == 0 %>
          <span class='unanswered'>odgovori</span>
          <i class='fa fa-arrow-right unanswered'></i>
        <% else %>
          <span class='answered'>pogledaj</span>
          <i class='fa fa-arrow-right answered'></i>
        <% end %>
      <% end %>
    </div>
  </div>
</li>