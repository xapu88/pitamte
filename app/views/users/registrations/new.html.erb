<div class='row'>
  <div class='col-md-4 col-md-offset-4 center user-form'>
    <h2>Registruj se</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: "Lozinka (najmanje 6 karaktera)", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Lozinka (ponovi unos)", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Kreiraj nalog", class: "form-control" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
    <hr />
    <span class='socials-login-explain'>ili se prijavi putem</span> <%= link_to user_omniauth_authorize_path(:facebook), :id => "sign_in_with_facebook" do %>
      <i class="fa fa-facebook-official fa-3x"></i>
    <% end %>
  </div>
</div>
