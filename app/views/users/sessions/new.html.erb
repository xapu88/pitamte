<div class='row'>
  <div class='col-md-4 col-md-offset-4 center user-form'>
    <h2>Prijavi se</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: "Lozinka", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group check-box-row">
          <%= f.check_box :remember_me %>
          <%= f.label :zapamti_me %>
        </div>
      <% end -%>

      <div class="form-group">
        <%= f.submit "Pristupi nalogu", class: "form-control" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
<div class='row'>
  <div class='col-md-4 col-md-offset-4'>
    ili se uloguj preko <%= link_to "Facebook-a", user_omniauth_authorize_path(:facebook), :id => "sign_in_with_facebook" %>
  </div>
</div>