<div class='row'>
  <div class='col-md-4 col-md-offset-4 center user-form'>
    <h2>Prijavi se</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: "Lozinka", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group check-box-row">
          <%= f.check_box :remember_me %>
          <%= f.label :zapamti_me %>
        </div>
      <% end -%>

      <div class="form-group">
        <%= f.submit "Pristupi nalogu", class: "form-control" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
    <hr />
    <span class='socials-login-explain'>ili se prijavi putem</span>
    <%= link_to user_omniauth_authorize_path(:facebook), :id => "sign_in_with_facebook" do %>
      <i class="fa fa-facebook-square fa-3x"></i>
    <% end %>
    <%= link_to user_omniauth_authorize_path(:twitter), :id => "sign_in_with_twitter" do %>
      <i class="fa fa-twitter-square fa-3x"></i>
    <% end %>
  </div>
</div>