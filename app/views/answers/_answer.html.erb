<li id="answer-<%= answer.id %>">
	<div class='row question'>
		<hr />
		<div class='col-sm-10 question-created-at'>
  		<span><%= answer.created_at.strftime("%d.%m.%Y. %H:%M") %></span>
  	</div>
    <% if user_signed_in? && answer.owner?(current_user) %>
      <div class='col-sm-2 question-actions'>
        <%= link_to edit_answer_path(answer) do %>
          <i class='fa fa-edit'></i>
        <% end %>
        <%= link_to answer, remote: true, method: :delete, data: { confirm: 'Da li ste sigurni? Odgovor Ä‡e biti trajno obrisan.' } do %>
          <button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <% end %>
      </div>
    <% end %>
  	<div class='col-sm-12 question-content'>
  		<span><%= answer.content %></span>
  	</div>
    <div class='col-sm-2 question-share'>
      <div class="fb-share-button" data-href="https://pitamte.herokuapp.com/questions/<%=answer.question.id%>#answer-<%= answer.id %>" data-layout="button"></div>
      </div>
    <div class='col-sm-4 question-author'>
      <span>
      <% if answer.signature.nil? %>
        anonimno
      <% elsif !answer.signature.nil? %>
        <%= answer.signature %>
      <% end %>
      </span>
    </div>
  </div>
</li>