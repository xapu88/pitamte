<% meta title: "Moja pitanja" %>
<div class='container'>
	<% if user_signed_in? %>
		<div class='row hidden-md hidden-lg personal-links'>
			<div class='col-xs-6 personal-link'>
	      <span>
	        <i class='fa fa-question-circle'></i><%= link_to "Moja pitanja", my_questions_path, disabled: true %>
	      </span>
	    </div>
	    <div class='col-xs-6 personal-link'>
	      <span>
	        <i class='fa fa-exclamation-circle'></i><%= link_to "Moji odgovori", my_answers_path %>
	      </span>
	    </div>
		</div>
	<% end %>

	<div class='row my-questions-content'>
		<div class='col-md-6 col-md-offset-3 col-sm-12 col-xs-12 questions-panel show-question my-questions'>
		  <div class='row questions-panel-header'>
		    <div class='col-sm-12 col-xs-12 questions-panel-header-title'>
		    	<h4>Lista svih mojih pitanja</h4>
		    </div>
		  </div>
		  <div class='row'>
		    <ul class="questions">
		      <%= render @questions %>
		    </ul>
		  </div>
		  <div class="row">
	    	<%= paginate @questions %>
	    </div>
		</div>
	</div>
</div>