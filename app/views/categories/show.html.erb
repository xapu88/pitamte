<% meta title: "Kategorije — " + @category.title %>
<div class='container'>
	<% if user_signed_in? %>
		<div class='row hidden-md hidden-lg'>
			<div class='col-xs-6 personal-link'>
	      <span>
	        <i class='fa fa-question-circle'></i><%= link_to "Moja pitanja", my_questions_path %>
	      </span>
	    </div>
	    <div class='col-xs-6 personal-link'>
	      <span>
	        <i class='fa fa-exclamation-circle'></i><%= link_to "Moji odgovori", my_answers_path %>
	      </span>
	    </div>
		</div>
	<% end %>
	
	<div class='row'>
		
		<div class='col-md-3 col-xs-3'>
			<div class='panel panel-default categories-panel'>
			  <div class="panel-body">
			  	<h4>Kategorije</h4>
			    <ul class="categories">
			    	<li>
			    		<%= link_to root_path do %>
								<div class='row category' id="category-0">
									<hr />
							  	<span>Sva pitanja</span><i class="fa fa-question-circle fa-5x hidden-md hidden-lg category-icon-all"></i><i class="fa fa-chevron-right category-arrow"></i>
							  </div>
							<% end %>
						</li>
  					<%= render @categories %>
					</ul>
			  </div>
			</div>
		</div>
		<div class='col-md-6 col-xs-9 questions-panel'>
	    <div class='row questions-panel-header'>
		    <div class='col-md-3 col-xs-4 questions-panel-header-title'>
		    	<h4>Pitanja</h4>
		    </div>
		    <div class='col-md-9 col-xs-8'>
		    	<h4 class='questions-panel-header-category'><%= @category.title %></h4>
		    </div>
		  </div>
		  <div class='row' id='question-form'>
		  	<%= render 'questions/form' %>
		  </div>
		  <div class='row'>
	      <ul class="questions">
	        <%= render @questions %>
	      </ul>
	    </div>
	    <div class="row">
	    	<%= paginate @questions %>
	    </div>
		</div>
		<div class='col-md-3 hidden-sm hidden-xs'>
			<div class="socials-panel-header">
				<h4>Društvene mreže</h4>
			</div>
			<div class="row socials-panel-body">
				<div class="col-md-6 socials-instr">
					<span>Podeli sajt:</span>
				</div>
				<div class="col-md-6">
					<iframe class="fb-share-button" width="100px" height="20px" frameborder="0" allowtransparency="true" scrolling="no" src="https://www.facebook.com/plugins/share_button.php?app_id=380442578823911&amp;href=http://www.pitamte.com&amp;layout=button_count" style="border: none; visibility: visible; width: 100px; height: 20px;"></iframe>
				</div>
			</div>
			<div class="row socials-panel-body">
				<div class="col-md-6 socials-instr">
					<span>FB stranica:</span>
				</div>
				<div class="col-md-6">
					<iframe class= "fb-like" src="//www.facebook.com/plugins/like.php?href=https%3A%2F%2Fwww.facebook.com%2Fpitamtecom%2F&amp;width=91&amp;layout=button_count&amp;action=like&amp;show_faces=false&amp;share=false&amp;appId=380442578823911" scrolling="no" frameborder="0" style="border:none; overflow:hidden; height:20px;" allowTransparency="true"></iframe>
				</div>
			</div>
			<div class="row socials-panel-body">
				<div class="col-md-12">
					<iframe
						class= "twitter-follow-button"
					  src="//platform.twitter.com/widgets/follow_button.html?screen_name=pitamtecom"
					  style="width: 300px; height: 20px;"
					  allowtransparency="true"
					  frameborder="0"
					  scrolling="no">
					</iframe>
				</div>
			</div>
			<div class="socials-panel-footer">
			</div>
			<div class="adds-panel">
				<iframe src="//go.padstm.com/?id=262211&t=iframe&var=44413" style="width:160px;height:600px;border:0;overflow:hidden;"></iframe>
			</div>
		</div>

	</div>
</div>

<script>
	$(document).on( 'click', '.close', function() {
		$(this).addClass('confirm-delete');
	});
</script>