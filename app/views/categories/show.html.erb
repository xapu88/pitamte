<% provide(:title, @category.title) %>

<div class='container'>
	<div class='row'>
		
		<div class='col-md-3 col-sm-4'>
			<div class='panel panel-default categories-panel'>
			  <div class="panel-body">
			  	<h4>Kategorije</h4>
			    <ul class="categories">
			    	<li>
			    		<%= link_to root_path do %>
								<div class='row category' id="category-0">
									<hr />
							  	<span>Sva pitanja</span><i class="fa fa-chevron-right"></i>
							  </div>
							<% end %>
						</li>
  					<%= render @categories %>
					</ul>
			  </div>
			</div>
		</div>
		<div class='col-md-6 col-sm-8 questions-panel'>
	    <div class='row questions-panel-header'>
		    <div class='col-md-3 col-sm-4 questions-panel-header-title'>
		    	<h4>Pitanja</h4>
		    </div>
		    <div class='col-md-9 col-sm-8'>
		    	<h4 class='questions-panel-header-category'><%= @category.title %></h4>
		    </div>
		  </div>
		  <div class='row' id='question-form'>
		  	<%= render 'questions/form' %>
		  </div>
		  <div class='row'>
	      <ul class="questions">
	        <%= render @questions %>
	      </ul>
	    </div>
		</div>
		<div class='col-md-3'>
			<iframe src="//go.padstm.com/?id=262211&t=iframe&var=44413" style="width:160px;height:600px;border:0;overflow:hidden;"></iframe>
		</div>

	</div>
</div>

<script>
	$(document).on( 'click', '.close', function() {
		$(this).addClass('confirm-delete');
	});
</script>